@page
@model Tienda.Pages.Productos.CreateModel

<h1>Create Producto</h1>

<form method="post" class="needs-validation" novalidate>
    <div class="form-group">
        <label asp-for="Producto.Nombre" class="control-label"></label>
        <input asp-for="Producto.Nombre" class="form-control" required />
        <span asp-validation-for="Producto.Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Producto.Precio" class="control-label"></label>
        <input asp-for="Producto.Precio" class="form-control" type="number" step="0.01" required />
        <span asp-validation-for="Producto.Precio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-page="/Productos/Index" class="btn btn-secondary">Regresar</a>
    </div>
</form>
